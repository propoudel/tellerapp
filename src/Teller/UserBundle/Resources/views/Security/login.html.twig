{% extends '::base.html.twig' %}

{% block body %}
    <form action="{{ path('login_check') }}" method="post" class="form-signin security">
        <label for="username">Username:</label>
        <input type="text" id="username" name="_username" class="input-block-level" />

        <label for="password">Password:</label>
        <input type="password" id="password" class="input-block-level" name="_password" />
        <button class="btn btn-large btn-primary" type="submit">Sign in</button>
    </form>
{% endblock %}