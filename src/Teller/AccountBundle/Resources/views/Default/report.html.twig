{% extends 'TellerAccountBundle::dashboard.html.twig' %}

{% block body %}

    <div class="panel panel-default">
        <div class="panel-heading"><h4>Report</h4></div>
        <div class="panel-body">
            <div class="col-sm-12">
                <form>

                    <div class="row">
                        <div class="col-sm-3">
                            <div class="form-group">
                                <label for="from">From</label>
                                <input class="form-control datepicker" name="from" type="text" placeholder="From Date">
                            </div>
                        </div>

                        <div class="col-sm-3">
                            <div class="form-group">
                                <label for="to">To</label>
                                <input type="text" class="form-control datepicker" id="to"
                                       placeholder="To Date">
                            </div>
                        </div>

                        <div class="col-sm-2">
                            <div class="form-group">
                                <label for="sendcurrency">Currency</label>
                                <input type="text" class="form-control" id="sendcurrency"
                                       placeholder="Currency">
                            </div>
                        </div>

                        <div class="col-sm-2">
                            <div class="form-group">
                                <label for="rate">Rate</label>
                                <input type="email" class="form-control" id="rate"
                                       placeholder="Rate">
                            </div>
                        </div>


                        <div class="col-sm-2">
                            <div class="form-group">
                                <label> &nbsp; </label>

                                <button class=" form-control btn btn-primary">Search</button>
                            </div>
                        </div>
                    </div>


                    <div class="row">
                        <div class="col-sm-12">
                            <div class="bs-example" data-example-id="bordered-table">
                                <table class="table table-bordered">
                                    <thead>
                                    <tr>
                                        <th>{{ knp_pagination_sortable(pagination, 'SN', 'a.id') }}</th>
                                        <th>Name</th>
                                        <th>{{ knp_pagination_sortable(pagination, 'DR', 'a.receivedMoney') }}</th>
                                        <th>{{ knp_pagination_sortable(pagination, 'CR', 'a.totalTransferredMoney') }}</th>
                                        <th>Details</th>
                                    </tr>
                                    </thead>
                                    <tbody>

                                    {% set i = 1 %}

                                    {% for list in pagination %}
                                        <tr>
                                            <th scope="row">{{ i }}</th>
                                            <td>Admin</td>
                                            <td>{{ list.receivedMoney }}</td>
                                            <td>{{ list.totalTransferredMoney }}</td>
                                            <td>Coming soon. orm</td>
                                        </tr>

                                        {% set i = i+1 %}

                                    {% endfor %}

                                    </tbody>
                                </table>
                            </div>
                            <nav class="pull-right">

                                {{ knp_pagination_render(pagination) }}


                            </nav>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-sm-12">
                            <button class="btn btn-primary pull-right">Export</button>
                        </div>
                    </div>
                </form>

            </div>

        </div>
    </div>

{% endblock %}